<div class="max-w-screen-lg mx-auto p-6">
  <div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-2xl text-stone-700 font-bold mb-4">Sign Up</h2>
    <form class="form signup-form">
      <div class="form-group mb-4">
        <label for="username-signup" class="text-lg text-stone-500">Username:</label>
        <input class="form-input text-black bg-gray-300 w-full border border-gray-300 p-2 rounded-md" type="text" id="username-signup" />
      </div>
      <div class="form-group mb-4">
        <label for="password-login" class="text-lg text-stone-500">Password:</label>
        <input class="form-input text-black bg-gray-300 w-full border border-gray-300 p-2 rounded-md" type="password" id="password-signup" />
      </div>
      <div class="form-group flex justify-center">
        <button class="btn bg-blue-500 hover:bg-blue-600 text-white w-full" type="submit">Sign Up</button>
      </div>
    </form>
  </div>
</div>
<script src="/js/signup.js"></script>