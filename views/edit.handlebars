<div class="max-w-screen-lg mx-auto p-5">
  <div class="bg-stone-700 rounded-lg shadow-md p-5">
    <h2 class="text-2xl text-white font-bold mb-4">Edit</h2>
    <div class="bg-white p-5 rounded">
        <form class="update-post-form" data-post-id="{{post.id}}" action="/dashboard/edit/{{post.id}}" method="POST">
        <div class="mb-4">
            <label for="title" class="text-lg text-stone-900">Title</label>
            <input type="text" id="title" name="title" value="{{post.title}}" class="text-black bg-gray-300 w-full border border-gray-300 p-2 rounded-md">
        </div>
        <div class="mb-4">
            <label for="content" class="text-lg text-stone-700">Content</label>
            <textarea id="content" name="content" class="text-black bg-gray-300 w-full border border-gray-300 p-2 rounded-md h-48">{{post.content}}</textarea>
        </div>
        <div class="flex justify-center">
            <button type="submit" class="btn bg-blue-500 hover:bg-blue-600 text-white w-full">Update</button>
        </div>
        </form>

        <form class="delete-post-form" data-post-id="{{post.id}}" action="/dashboard/delete/{{post.id}}" method="POST" onsubmit="return confirm('Are you sure you want to delete this post?')">
        <div class="flex justify-center">
            <button type="submit" class="btn bg-red-500 hover:bg-red-600 text-white w-full mt-3">Delete</button>
        </div>
        </form>
    </div>
  </div>
</div>

<script src="/js/updatepost.js"></script>
<script src="/js/deletepost.js"></script>