<div class="flex-grow">
  <div class="max-w-screen-2lg mx-auto p-2">
    <div class="post-item bg-stone-900 rounded p-1">
      <div class="flex items-center justify-between text-xl p-2">
        <h2 class="flex-1">{{post.title}}</h2>
        <p>Created by {{post.user.username}} on {{format_date post.createdAt}}</p>
      </div>
      <div class="bg-blue-200 h-32">
        <p class="text-stone-900 text-lg">{{post.content}}</p>
      </div>
    </div>
  </div>
</div>

  <div class="flex justify-between">
  <h3 class="text-4xl text-black p-2">Comments</h3>
  <a href="/comments/new/{{post.id}}" class="btn bg-green-500 hover:bg-green-600 text-white mr-6">Leave a Comment</a>
  </div>


  {{#each post.comments}}
    <div class="max-w-screen-2lg mx-auto p-2">
      <div class="comment-item bg-stone-900 rounded p-1">
        <div class="flex items-center justify-between text-lg p-2">
          <p>Comment by {{user.username}} on {{format_date createdAt}}</p>
        </div>
        <div class="bg-gray-200">
          <p class="text-stone-900 text-base">{{content}}</p>
        </div>
      </div>
    </div>
  {{/each}}

