              <a href="/login">Login</a>
            {{/if}}
        </nav>

        <header>
            <h1>{{#if loggedIn}}Dashboard{{else}}The Tech Blog{{/if}}</h1>
        </header>
    </div>
    
    {{{ body }}}

    </main>

  


  {{#if loggedIn}}
  <script src="/js/logout.js"></script>
  {{/if}}


  <script src="https://cdn.tailwindcss.com"></script>
