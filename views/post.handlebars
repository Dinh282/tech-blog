<div class="max-w-screen-lg mx-auto p-6">
  <div class="bg-stone-700 rounded-lg shadow-md p-5">
    <h2 class="text-2xl text-white font-bold mb-4">Create a New Post:</h2>
    <div class="bg-white p-5 rounded">
      <form class="form new-post-form">
        <div class="form-group mb-4">
          <label for="post-name" class="text-lg text-stone-900">Title:</label>
          <input class="form-input text-black bg-gray-300 w-full border border-black-500 p-2 rounded-md" type="text" id="post-name" name="post-name" />
        </div>
        <div class="form-group mb-4">
          <label for="post-desc" class="text-lg text-stone-700">Content:</label>
          <textarea class="form-input text-black bg-gray-300 w-full border border-gray-300 p-2 rounded-md h-40" id="post-desc" name="post-desc"></textarea>
        </div>
        <div class="form-group flex justify-center">
          <button type="submit" class="btn bg-blue-500 hover:bg-blue-600 text-white w-full">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/post.js"></script>