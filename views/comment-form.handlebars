<div class="flex-grow">
  <div class="max-w-screen-2lg mx-auto p-2">
    <div class="post-item bg-stone-900 rounded p-1">
      <div class="flex items-center justify-between text-xl p-2">
        <h2 class="flex-1">{{post.title}}</h2>
        <p>Created by {{post.user.username}} on {{format_date post.createdAt}}</p>
      </div>
      <div class="bg-blue-200 h-32">
        <p class="text-stone-900 text-lg">{{post.content}}</p>
      </div>
    </div>
  </div>
</div>


<div class="max-w-screen-lg mx-auto p-6">
  <div class="bg-stone-700 rounded-lg shadow-md p-5">
    <div class="flex justify-between pb-2">
    <h2 class="text-2xl text-white font-bold mb-4">Leave A Comment</h2>
    <button class="btn btn-sm exit-btn btn-circle btn-error" onclick="window.location.href='/comments/{{post.id}}'">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
    </button>
    </div>
    <div class="bg-white p-5 rounded">
      <form class="form new-comment-form" data-post-id="{{post.id}}">
        <div class="form-group mb-4">
          <label for="comment-desc" class="text-lg text-stone-700"></label>
          <textarea class="form-input text-black bg-gray-300 w-full border border-gray-300 p-2 rounded-md h-40" id="comment-desc" name="comment-desc"></textarea>
        </div>
        <div class="form-group flex justify-center">
          <button type="submit" class="btn bg-blue-500 hover:bg-blue-600 text-white w-full">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/comment.js"></script>